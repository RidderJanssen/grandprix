<%= form_for @deelnemer, url: @url do |f| %>
  <%= hidden_field_tag(:toernooi_id, @toernooi.id) unless @toernooi.nil? %>
  <%= hidden_field_tag(:redirect, @redirect||"deelnemers_path" ) %>
  Voornaam <i>(verplicht)</i>: <%= f.text_field :voornaam %><br /><br />
  Tussenvoegsel: <%= f.text_field :tussenvoegsel %><br /><br />
  Achternaam: <i>(verplicht)</i>: <%= f.text_field :achternaam %><br /><br />
  Geboortedatum <i>(verplicht)</i>: <%= f.date_field :geboortedatum %><br /><br />
  Geslacht <i>(verplicht)</i>: <br />
  <%= radio_button_tag(:geslacht, "man") %> <%= label_tag(:geslacht_man, "Man") %><br />
  <%= radio_button_tag(:geslacht, "vrouw") %> <%= label_tag(:geslacht_vrouw, "Vrouw") %> <br /><br />
  E-mail: <%= f.email_field :email %><br /><br />
  Telefoonnummer: <%= f.text_field :telefoonnummer %><br /><br />
  KNSB-nummer: <%= f.text_field :knsbnummer %><br /><br />
  Rating: <%= f.text_field :rating %><br /><br />
  <%= f.submit "Verstuur" %>
<% end %>
